<UserControl x:Class="DbMaintenanceWPF.View.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding UserModel, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="867"
             d:DesignWidth="1120"
             Style="{StaticResource Page_Style}"
             Background="AliceBlue">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="873*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="686*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>

        <Grid 
Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="112*"/>
                <ColumnDefinition Width="155*"/>
                <ColumnDefinition Width="298*"/>
                <ColumnDefinition Width="212*"/>
                <ColumnDefinition Width="343*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Start Category-->

            <Border 
    Background="#093A5C"
    CornerRadius="18"
    Margin="5,5,5,4"
    Grid.ColumnSpan="5"/>

            <Border 
    Background="AliceBlue"
    CornerRadius="15" 
    Margin="10,10,10,10"
    Grid.ColumnSpan="5"/>

            <CheckBox 
    Style="{StaticResource chkBullet}"
    IsChecked="{Binding FlagRole, UpdateSourceTrigger=PropertyChanged}"
    Background="#DB4B4B" 
    Content="Выкл"
    Tag="Вкл" 
    FontSize="15" 
    VerticalAlignment="Center" 
    HorizontalAlignment="Center"
    FontFamily="Nautilus Pompilius"
    Height="30" 
    Width="70"/>

            <TextBlock 
    Text="Роль:"
    VerticalAlignment="Center" 
    FontSize="28" 
    FontFamily="Nautilus Pompilius" 
    HorizontalAlignment="Center" 
    Grid.Column="1"/>

            <ComboBox 
    IsEnabled="{Binding FlagRole,UpdateSourceTrigger=PropertyChanged}"
    ItemsSource="{Binding Roles}"
    SelectedItem ="{Binding SelectedRole}"
    Style="{StaticResource ComboboxStyle}" 
    FontSize="20"
    IsReadOnly="True"
    FontFamily="Nautilus Pompilius" 
    Grid.Column="2"
    VerticalAlignment="Center" Height="28"/>

            <!--End Category-->

        </Grid>

        <TextBox 
            Style="{StaticResource HintTextBox}" 
            Text="{Binding TextFilter, UpdateSourceTrigger=PropertyChanged}"
            Grid.Row="1"
            Tag="Поиск по логину" 
            FontFamily="Times New Roman" 
            FontSize="20" 
            Grid.ColumnSpan="2" 
            Margin="5,5,5,5"/>

        <DataGrid 
        Grid.Row="2"
        Margin="5,5,5,15" 
        ItemsSource="{Binding Users}"
        Grid.ColumnSpan="2">

            <DataGrid.Columns>
                <DataGridTemplateColumn 
                MinWidth="30">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox 
                            Style="{StaticResource CheckBoxStyle}"
                            IsChecked="{Binding Path=IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                Header="Аватар" 
                Width="1*">

                    <DataGridTemplateColumn.CellTemplate>

                        <DataTemplate>
                            <Border 
                            CornerRadius="15"
                            Margin="0,0,25,0"
                            Width="40"
                            Height="40">

                                <Border.Background>

                                    <ImageBrush 
                                    Stretch="Fill" 
                                    ImageSource="{Binding Image}"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>

                                </Border.Background>

                            </Border>
                        </DataTemplate>

                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>

                <DataGridTextColumn 
                Header="Роль"  
                Width="1*" 
                Binding="{Binding Role}"/>

                <DataGridTextColumn
                Header="Логин" 
                Width="1*" 
                Binding="{Binding Login}"/>

                <DataGridTextColumn 
                Header="Фамилия" 
                Width="1*"
                Binding="{Binding Surname}"/>

                <DataGridTextColumn 
                Header="Имя" 
                Width="1*" 
                Binding="{Binding Name}"/>

                <DataGridTemplateColumn
                Header="Блокировка" 
                Width="1*">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">

                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLock}" Value="True">
                                                    <Setter Property="Text" Value="Заблокирован"/>
                                                    <Setter Property="Foreground" Value="#E53434"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsLock}" Value="False">
                                                    <Setter Property="Text" Value="Доступен"/>
                                                    <Setter Property="Foreground" Value="#79DA62"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Image Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLock}" Value="True">
                                                    <Setter Property="Source" Value="/Resources/Pictures/iconLock.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsLock}" Value="False">
                                                    <Setter Property="Source" Value="/Resources/Pictures/iconUnlock.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                            </StackPanel>
                            
                            
                        </DataTemplate>
                        
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn 
                Header="Дата блокировки"
                IsReadOnly="True"
                Width="1*" 
                Binding="{Binding StringDateLock}"/>

                <DataGridTemplateColumn
                Header="Операции"
                Width="150"
                CanUserResize="False">

                    <DataGridTemplateColumn.CellTemplate>

                        <DataTemplate>
                            <StackPanel 
                            Orientation="Horizontal">

                                <Button
                                Style="{StaticResource RoundCorner}"
                                Margin="5,5,5,5" 
                                Width="48" 
                                Height="48" 
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                CommandParameter="{Binding}">

                                    <Image Source="/Resources/Pictures/Edit.png" Width="30" Height="30"/>

                                </Button>

                                <Button 
                                Style="{StaticResource RoundCorner}"
                                Margin="5,5,5,5"
                                Width="48"
                                Height="48"
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                CommandParameter="{Binding}">

                                    <Image Source="/Resources/Pictures/Delete.png" Width="30" Height="30"/>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu 
    x:Name="menu"
    FontSize="14">

                    <MenuItem 
        Style="{StaticResource Sub_MenuItem}"
        Command="{Binding Path=PlacementTarget.DataContext.AddCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}">

                        <MenuItem.Icon>
                            <Image Source="/Resources/Pictures/AddContextMenu.png" Width="18" Height="18"/>
                        </MenuItem.Icon>

                        <MenuItem.Header>
                            <TextBlock Text="Добавить товар"/>
                        </MenuItem.Header>

                    </MenuItem>

                    <MenuItem 
        Style="{StaticResource Sub_MenuItem}" 
        Command="{Binding Path=PlacementTarget.DataContext.EditCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}"
        CommandParameter="{Binding Path=PlacementTarget.SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}">

                        <MenuItem.Icon>
                            <Image Source="/Resources/Pictures/Edit.png" Width="18" Height="18"/>
                        </MenuItem.Icon>

                        <MenuItem.Header>
                            <TextBlock Text="Редактировать товар"/>
                        </MenuItem.Header>
                    </MenuItem>

                    <MenuItem
        Style="{StaticResource Sub_MenuItem}" 
        Command="{Binding Path=PlacementTarget.DataContext.DeleteCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}"
        CommandParameter="{Binding Path=PlacementTarget.SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}">

                        <MenuItem.Icon>
                            <Image Source="/Resources/Pictures/Delete.png" Width="18" Height="18"/>
                        </MenuItem.Icon>

                        <MenuItem.Header>
                            <TextBlock Text="Удалить товар" Foreground="#E53434"/>
                        </MenuItem.Header>

                    </MenuItem>


                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>


        <!-- Operation Button -->

        <StackPanel
Grid.Row="3"
Orientation="Horizontal"
Grid.ColumnSpan="2">

            <Image
    Source="/Resources/Pictures/DownArrow.png" 
    Width="59" 
    Height="53" 
    VerticalAlignment="Top" 
    Margin="25,0,0,0"
    HorizontalAlignment="Left" 
    RenderTransformOrigin="0.5,0.5"/>

            <TextBlock 
    Text="С отмеченными:" 
    Margin="0,0,25,0"
    FontSize="22"
    VerticalAlignment="Center"
    FontFamily="Nautilus Pompilius"/>

        </StackPanel>

        <Border 
Background="#093A5C"
CornerRadius="18"
Margin="5,5,5,5"
Grid.Column="1"
Grid.Row="3"/>

        <Border 
Background="AliceBlue" 
CornerRadius="15"  
Margin="10,10,10,10"
Grid.Column="1"
Grid.Row="3"/>

        <Grid
Grid.Row="3"
Grid.Column="1" 
Margin="15,15,15,15">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
    x:Name="butDel"
    Style="{StaticResource RoundCorner}" 
    Foreground="#E53434" 
    FontSize="16"
    FontFamily="Nautilus Pompilius"  
    Margin="5,0,5,0"
    HorizontalAlignment="Left" 
    Command="{Binding MultiplyDeleteCommand}">

                <StackPanel 
        Orientation="Horizontal">

                    <Image
            Source="/Resources/Pictures/Delete.png" 
            Margin="0,2,25,0"/>

                    <TextBlock 
            Text="Удалить" 
            Margin="0,0,25,0"
            FontSize="18"
            VerticalAlignment="Center"/>

                </StackPanel>

            </Button>

            <Button 
    x:Name="butAdd" 
    Grid.Column="1" 
    Style="{StaticResource RoundCorner}"
    Foreground="#D9D9D9"
    FontSize="16"
    FontFamily="Nautilus Pompilius"
    Margin="5,0,5,0" 
    HorizontalAlignment="Right"
    Command="{Binding AddCommand}">

                <StackPanel 
        Orientation="Horizontal">
                    <Image 
            Source="/Resources/Pictures/AddContextMenu.png" 
            Margin="0,2,25,0"/>

                    <TextBlock 
            Text="Добавить поставку"
            Margin="0,0,25,0"
            FontSize="18"
            VerticalAlignment="Center"/>

                </StackPanel>

            </Button>

        </Grid>

    </Grid>
</UserControl>
