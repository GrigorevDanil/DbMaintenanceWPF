                    Style="{StaticResource SubMenuItemStyleWithDropDown}"
                    Header="HTML"
                    FontFamily="Nautilus Pompilius"
                    Foreground="#D9D9D9"
                    FontSize="16">

                    <MenuItem 
                        Style="{StaticResource Sub_MenuItem}"
                        Header="Табель учета рабочего времени"
                        Foreground="#D9D9D9"
                        FontFamily="Nautilus Pompilius" 
                        FontSize="16" 
                        Command="{Binding PrintHtmlCommand}"/>

                </MenuItem>

            </MenuItem>
        </Menu>

        <!--Windows Button-->

