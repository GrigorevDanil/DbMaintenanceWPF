             Grid.Column="1"/>

        <Menu 
            Grid.Row="1"
            Grid.Column="1"
            Background="AliceBlue" 
            Margin="20,15,20,15">

            <MenuItem  
                Style="{StaticResource MenuItemStyleWithDropDown}"
                Foreground="#D9D9D9" 
                Header="О программе"
                FontFamily="Nautilus Pompilius"
                FontSize="16">

                <MenuItem.Icon>
                    <Image  
                        Source="/Resources/Pictures/IconProgramm.png" />
                </MenuItem.Icon>

                <MenuItem 
                    Style="{StaticResource Sub_MenuItem}" 
                    Header="Об авторе"
                    Foreground="#D9D9D9"
                    FontFamily="Nautilus Pompilius"
                    FontSize="16" 
                    Command="{Binding OutputAuthorCommand}"/>

                <MenuItem 
                    Style="{StaticResource Sub_MenuItem}" 
                    Header="Справка" 
                    Foreground="#D9D9D9" 
                    FontFamily="Nautilus Pompilius"
                    FontSize="16"
                    Command="{Binding HelpCommand}"/>

            </MenuItem>

            <MenuItem
                Style="{StaticResource MenuItemStyleWithDropDown}"
                Header="Отчеты"   
                FontFamily="Nautilus Pompilius"
                Foreground="#D9D9D9"
                FontSize="16">

                <MenuItem.Icon>
                    <Image 
                        Source="/Resources/Pictures/IconPrint.png"  />
                </MenuItem.Icon>

                <MenuItem 
