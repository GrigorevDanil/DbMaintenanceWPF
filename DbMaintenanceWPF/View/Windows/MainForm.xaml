<Window x:Class="DbMaintenanceWPF.View.Windows.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:DbMaintenanceWPF.Resources"
        xmlns:cmd="clr-namespace:DbMaintenanceWPF.Infrastructure.Commands"
        xmlns:local="clr-namespace:DbMaintenanceWPF.View.Windows"
        xmlns:view="clr-namespace:DbMaintenanceWPF.View"
        xmlns:con="clr-namespace:DbMaintenanceWPF.Infrastructure.Converter"
        DataContext="{Binding MainModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        x:Name="CurrentWindow"
        Style="{StaticResource SpringAnimation}"
        Title="Главное окно"
        Icon="/Resources/Pictures/IconMain.png"
        Height="1000"
        Width="1500"
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None" 
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome/>
    </WindowChrome.WindowChrome>
   

    <Window.Resources>

        <con:InstanceEqualsConverter x:Key="InstanceEqualsConverter"/>

        <Storyboard x:Key="EnterSubmenu">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="15" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0" To="1.0" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames
                Storyboard.TargetProperty="Visibility"
                Duration="0:0:0.1">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="LeaveSubmenu">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="0" To="15" Duration="0:0:0.2"/>
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0" Duration="0:0:0.2"/>
            <ObjectAnimationUsingKeyFrames
                Storyboard.TargetProperty="Visibility"
                Duration="0:0:0.2">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(ToggleButton.IsChecked)">
                <DiscreteBooleanKeyFrame KeyTime="0" Value="False" />
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="897*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="913*"/>
            <ColumnDefinition Width="237*"/>
        </Grid.ColumnDefinitions>
        <Border 
             Background="#093A5C"
             CornerRadius="18"
             Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <Border 
             Background="AliceBlue"
             CornerRadius="15"
             Grid.ColumnSpan="3" 
             Margin="5,5,5,5" Grid.RowSpan="3"/>

        <Border 
             Background="#093A5C"
             CornerRadius="5"
             Grid.Column="1" Margin="15,16,15,16" Grid.ColumnSpan="2"/>

        <!--Menu-->

